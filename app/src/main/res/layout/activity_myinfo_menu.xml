<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="#B4E5FF"
            android:orientation="horizontal"
            >


            <ImageView
                android:id="@+id/back_myinfo_menu"
                android:layout_marginLeft="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:backgroundTint="#696969"
                android:background="@drawable/ic_baseline_chevron_left_24"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#696969"
                android:text="나의 사용자 정보"
                android:fontFamily="@font/ddcoding"/>




        </FrameLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="40sp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/defaultuser"
            />

        <LinearLayout
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="Default"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="님의 사용자 정보 입니다."/>

           </LinearLayout>


            <Space
                android:layout_width="wrap_content"
                android:layout_height="30sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:textSize="20sp"
                        android:text="회원 정보"/>
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="5sp"
                        android:background="@color/black"/>

                </LinearLayout>

            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:layout_marginLeft="20sp"
                    android:textSize="15sp"
                    android:text="이름"/>

                <Space
                    android:layout_width="255sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:textSize="15sp"
                    android:gravity="right"
                    android:text="Default"/>


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:layout_marginLeft="20sp"
                    android:textSize="15sp"
                    android:text="전화 번호"/>

                <Space
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/info_number"
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:textSize="15sp"
                    android:gravity="right"
                    android:text="010 - 1234 - 5678"/>


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:layout_marginLeft="20sp"
                    android:textSize="15sp"
                    android:text="생년 월일"/>

                <Space
                    android:layout_width="210sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/info_brith"
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:textSize="15sp"
                    android:gravity="right"
                    android:text="22 / 08 / 21"/>


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20sp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:background="#696969"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:textSize="17sp"
                android:text="운임 정보"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp"/>

            <Space
                android:layout_width="275sp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:layout_marginLeft="20sp"
                    android:textSize="15sp"
                    android:text="나의 탑승 요금"/>

                <Space
                    android:layout_width="202sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/info_mycharge"
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:textSize="15sp"
                    android:gravity="right"
                    android:text="1,000"/>


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:layout_marginLeft="40sp"
                    android:textSize="15sp"
                    android:text="+ 소득분위"/>

                <Space
                    android:layout_width="206sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/info_income"
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:textSize="15sp"
                    android:gravity="right"
                    android:text="1,000"/>


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:layout_marginLeft="40sp"
                    android:textSize="15sp"
                    android:text="+ 증가비용"/>

                <Space
                    android:layout_width="206sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/info_extracharge"
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:textSize="15sp"
                    android:gravity="right"
                    android:text="1,000"/>


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:background="#696969"/>


        </LinearLayout>

    </LinearLayout>

</ScrollView>
